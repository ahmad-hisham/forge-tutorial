<h1>Browse Forge Buckets</h1>

<div class="btn-group" role="group" id="toolbar-container">
  <a type="button" class="btn btn-default" href="#" data-toggle="modal" data-target="#modal-new-bucket">
    <span class="glyphicon glyphicon-inbox"></span>
    Create bucket
  </a>
</div>

<%= render partial: "new_bucket_form" %>

<%= render partial: "flash_info" %>

<table class="table">
  <tr>
    <th>id</th>
    <th>Created date</th>
    <th>Policy key</th>
    <th></th>
  </tr>

  <% @buckets.each do |bucket| %>
    <tr>
      <td>
        <span class="glyphicon glyphicon-inbox"></span>
        <%= bucket.id %>
        <%# link_to bucket.id, forge_data_objects_path(bucket.id) %>
      </td>
      <td><%= bucket.created_date.strftime("%F") %></td>
      <td><%= bucket.policy_key %></td>

      <td><%= link_to 'Properties', forge_data_bucket_show_path(bucket.id) %>
      </td>
    </tr>
  <% end %>
</table>
