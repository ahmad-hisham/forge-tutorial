<h1>Browse Forge Hubs</h1>

<table>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>type</th>
    <th colspan="2"></th>
  </tr>

  <% @hubs.each do |hub| %>
    <tr>
      <td><%= hub.id %></td>
      <td><%= hub.name %></td>
      <td><%= hub.type %></td>

      <td><%= link_to 'Show Details', forge_data_hub_show_path(hub.id) %></td>
      <td><!-- %= link_to 'Show Projects', forge_data_project_index_path(hub.id) % --></td>
    </tr>
  <% end %>
</table>
