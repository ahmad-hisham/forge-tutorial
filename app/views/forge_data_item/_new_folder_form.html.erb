<div class="modal fade" id="modal-new-folder" tabindex="-1" role="dialog" aria-labelledby="modal-label">
  <div class="modal-dialog" role="document">
    <%= form_tag({action: :new_folder}, method: "post") do %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="modal-label">Create folder</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag "subfolder_name", "Folder name" %>
            <%= text_field_tag "subfolder_name", "", class: "form-control"  %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= submit_tag "Create", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>  
  </div>
</div>